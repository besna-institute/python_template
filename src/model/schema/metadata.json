{
  "title": "Schema of Solver metadata",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "metadata.json",
  "definitions": {
    "apiName": {
      "title": "API Name",
      "description": "API name",
      "$id": "metadata/apiName",
      "type": "string",
      "pattern": "^Solver$"
    },
    "apiVersion": {
      "title": "API Version",
      "description": "API version",
      "$id": "metadata/apiVersion",
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+((M|RC)-[0-9]+)*$"
    }
  }
}