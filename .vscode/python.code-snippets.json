{
  // Place your python_template workspace snippets here. Each snippet is defined under a snippet name and has a scope, prefix, body and 
  // description. Add comma separated ids of the languages where the snippet is applicable in the scope field. If scope 
  // is left empty or omitted, the snippet gets applied to all languages. The prefix is what is 
  // used to trigger the snippet and the body will be expanded and inserted. Possible variables are: 
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. 
  // Placeholders with the same ids are connected.
  // Example:
  // "Print to console": {
  // 	"scope": "javascript,typescript",
  // 	"prefix": "log",
  // 	"body": [
  // 		"console.log('$1');",
  // 		"$2"
  // 	],
  // 	"description": "Log output to console"
  // }
  "Ignore mypy": {
    "scope": "python",
    "prefix": "# type: ignore",
    "body": "# type: ignore",
    "description": "https://mypy.readthedocs.io/en/stable/common_issues.html#silencing-linters"
  },
  "Ignore flake8": {
    "scope": "python",
    "prefix": "# noqa",
    "body": "# noqa: ${1:ErrorCode,...}",
    "description": "https://flake8.pycqa.org/en/latest/user/violations.html#in-line-ignoring-errors"
  },
  "Ignore pylint": {
    "scope": "python",
    "prefix": "# pylint: disable",
    "body": "# pylint: disable=${1:Message,...}",
    "description": "https://pylint.pycqa.org/en/latest/user_guide/messages/message_control.html#block-disables"
  },
  "Ignore bandit": {
    "scope": "python",
    "prefix": "# nosec",
    "body": "# nosec ${1:ErrorCode,...}",
    "description": "https://bandit.readthedocs.io/en/latest/config.html?highlight=comment#suppressing-individual-lines"
  },
}